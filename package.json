{
  "name": "node-lib",
  "version": "0.1.0",
  "description": "a basic nodejs template",
  "type": "module",
  "scripts": {
    "serve": "npm run build && node dist/server.js",
    "client": "npm run build && node dist/client.js",
    "build": "tsc",
    "clean": "rimraf dist",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "test": "run-p -cl --aggregate-output lint:* test:type test:unit",
    "test:type": "tsc -p tsconfig.test.json",
    "test:unit": "vitest run",
    "prepublishOnly": "run-s clean build"
  },
  "devDependencies": {
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vitest": "^0.22.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "dependencies": {
    "@trpc/client": "^10.0.0-proxy-beta.25",
    "@trpc/server": "^10.0.0-proxy-beta.25",
    "zod": "^3.19.1"
  }
}
